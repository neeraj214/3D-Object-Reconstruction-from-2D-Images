FROM python:3.12-slim
WORKDIR /app
COPY . /app
RUN pip install --no-cache-dir --upgrade pip && \
    (test -f requirements.txt && pip install -r requirements.txt || pip install fastapi uvicorn numpy opencv-python-headless open3d torch timm matplotlib)
EXPOSE 5000
CMD ["python", "-m", "uvicorn", "server.api:app", "--host", "0.0.0.0", "--port", "5000"]