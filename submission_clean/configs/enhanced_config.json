{
    "model": {
        "encoder_type": "vit",
        "representation": "sdf",
        "hidden_dim": 256,
        "num_layers": 8,
        "positional_encoding": true,
        "uncertainty_quantification": true,
        "attention_heads": 8,
        "dropout": 0.1,
        "activation": "gelu"
    },
    "training": {
        "batch_size": 16,
        "learning_rate": 1e-4,
        "num_epochs": 100,
        "mixed_precision": true,
        "curriculum_learning": true,
        "gradient_clipping": 1.0,
        "scheduler": "cosine",
        "warmup_epochs": 5,
        "accumulation_steps": 1,
        "validation_frequency": 5,
        "checkpoint_frequency": 10,
        "early_stopping_patience": 15
    },
    "optimization": {
        "quantization": true,
        "tensorrt_optimization": true,
        "pruning": false,
        "knowledge_distillation": false,
        "quantization_bits": 8,
        "pruning_ratio": 0.5,
        "distillation_temperature": 4.0
    },
    "datasets": {
        "primary": "pix3d",
        "additional": ["shapenet", "pascal3d", "objectnet3d", "co3d"],
        "data_dir": "data",
        "train_split": 0.8,
        "val_split": 0.1,
        "test_split": 0.1,
        "augmentation": {
            "enabled": true,
            "rotation_range": 15,
            "scale_range": [0.9, 1.1],
            "translation_range": 0.1,
            "color_jitter": true,
            "gaussian_noise": true
        }
    },
    "evaluation": {
        "metrics": ["chamfer", "hausdorff", "iou", "f1", "psnr", "ssim", "lpips"],
        "uncertainty_evaluation": true,
        "cross_dataset_evaluation": true,
        "save_predictions": true,
        "visualization": true,
        "batch_size": 8
    },
    "deployment": {
        "target_devices": ["mobile", "jetson", "raspberry_pi"],
        "model_serving": true,
        "batch_inference": true,
        "serving_port": 8080,
        "max_batch_size": 32,
        "timeout": 30,
        "device_optimization": {
            "mobile": {
                "quantization": true,
                "pruning": true,
                "input_size": [224, 224]
            },
            "jetson": {
                "tensorrt": true,
                "precision": "fp16",
                "input_size": [256, 256]
            },
            "raspberry_pi": {
                "quantization": true,
                "pruning": true,
                "input_size": [192, 192]
            }
        }
    },
    "loss_functions": {
        "sdf_loss_weight": 1.0,
        "occupancy_loss_weight": 1.0,
        "nerf_loss_weight": 1.0,
        "normal_loss_weight": 0.1,
        "chamfer_loss_weight": 0.5,
        "edge_loss_weight": 0.1,
        "laplacian_loss_weight": 0.01,
        "uncertainty_loss_weight": 0.1
    },
    "advanced_training": {
        "gradient_accumulation": true,
        "gradient_clipping_value": 1.0,
        "mixed_precision": true,
        "ema_decay": 0.999,
        "curriculum_learning": {
            "enabled": true,
            "stages": 3,
            "stage_epochs": [30, 30, 40],
            "difficulty_thresholds": [0.3, 0.6, 1.0]
        },
        "adversarial_training": false,
        "self_supervised_pretraining": true
    },
    "uncertainty_quantification": {
        "method": "ensemble",
        "num_ensemble_members": 5,
        "dropout_rate": 0.2,
        "temperature_scaling": true,
        "calibration_bins": 10
    },
    "logging": {
        "level": "INFO",
        "save_interval": 1000,
        "tensorboard": true,
        "wandb": false,
        "log_dir": "logs"
    }
}